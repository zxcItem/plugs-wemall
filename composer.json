{
    "type": "think-admin-plugin",
    "name": "xiaochao/plugs-wemall",
    "version": "dev-master",
    "authors": [
        {
            "name": "叶落无痕",
            "email": "zxcaile@foxmail.com"
        }
    ],
    "require": {
        "php": ">7.1"
    },
    "autoload": {
        "psr-4": {
            "plugin\\wemall\\": "src"
        }
    },
    "extra": {
        "config": {
            "type": "module",
            "name": "分销商城管理",
            "cover": "iconfont iconfont-shoplight",
            "description": "分销商城系统为商品分佣,会员代理,代理分佣等基础功能"
        },
        "think": {
            "services": [
                "plugin\\wemall\\Service"
            ]
        },
        "plugin": {
            "copy": {
                "stc/database": "database/migrations"
            }
        }
    },
    "minimum-stability": "dev",
    "config": {
        "allow-plugins": {
            "zoujingli/think-install": true
        }
    }
}
